%%% 文字数・行数設定 %%%
% 1 行あたり文字数の指定
\makeatletter
\def\mojiparline#1{
    \newcounter{mpl}
    \setcounter{mpl}{#1}
    \@tempdima=\linewidth
    \advance\@tempdima by-\value{mpl}\zw
    \addtocounter{mpl}{-1}
    \divide\@tempdima by \value{mpl}
    \ltjsetparameter{kanjiskip=\@tempdima}
    \advance\parindent by\@tempdima
}
\mojiparline{35}
% 1 ページあたり行数の指定
\makeatother
\def\linesparpage#1{
    \baselineskip=\textheight
    \divide\baselineskip by #1
}
